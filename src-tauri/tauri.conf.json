{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sixarms",
  "version": "0.2.0",
  "identifier": "com.sixarms.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Sixarms",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "AI-powered development progress tracking",
    "longDescription": "Sixarms is an AI-powered development progress tracking assistant that helps developers track their daily work, manage todos, and gain insights into their coding patterns."
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXkgMDA3N0NBMkNGQkJDRTBFQwpSV1RzNEx6N0xNcDNBTzAxNHlBR2N6ZHEyQkNYZkRwVVArSC9NSGVQOEt4OVBud09jUFhPVjlBSAo=",
      "endpoints": [
        "https://github.com/888wing/sixarms/releases/latest/download/latest.json"
      ]
    }
  }
}
